{
    "name": "Dataverse",
    "id": "dataverse_ynh",
    "packaging_format": 1,
    "description": {
        "en": "Open source research data repository software",
        "fr": "Logiciel libre de dépôt de données de recherche"
    },
    "version": "5.4.1~ynh1",
    "url": "https://dataverse.org",
    "license": "free",
    "maintainer": {
        "name": "Florian Dierickx",
        "email": "floriandierickx@gmail.com",
        "url": "https://floriandierickx.github.io"
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php7.3-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Dataverse",
                    "fr": "Choisissez un domaine pour Dataverse"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Dataverse",
                    "fr": "Choisissez un chemin pour Dataverse"
                },
                "example": "/dataverse",
                "default": "/dataverse"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose the Dataverse administrator (must be an existing YunoHost user)",
                    "fr": "Choisissez l'administrateur de Dataverse (doit être un utilisateur YunoHost existant)"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the Dataverse application language",
                    "fr": "Choisissez la langue de l'application Dataverse"
                },
                "choices": ["fr", "en"],
                "default": "en"
            },
            {
                "name": "password",
                "type": "password",
                "help": {
                    "en": "Use the help field to add an information for the admin about this question.",
                    "fr": "Utilisez le champ aide pour ajouter une information à l'intention de l'administrateur à propos de cette question."
                },
                "example": "Choose a password"
            }
        ]
    }
}
